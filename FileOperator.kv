Master_Control:

<Master_Control>:
    orientation: "vertical"
	FloatLayout:
	    Button:
	    	height: "400dp"
	        text: "Upload File"
	        pos: 100, 400
	        size_hint_x: 0.15
	        size_hint_y: 0.15
	        on_press: root.upload_file()
#	        on_release: root.show_load()

	    Button:
	        text: "Download File"
	        size_hint_x: 0.15
	        size_hint_y: 0.15
	        pos: 300, 400
	        on_press: root.download_file()


	    Button:
	        text: "Start Ftp Server"
	        size_hint_x: 0.15
	        size_hint_y: 0.15
	        pos: 600, 400
	        on_press: root.start_ftp_server()



